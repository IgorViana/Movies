<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".detail.DetailFragment">


    <ImageView
        android:id="@+id/detail_movie_cover"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:contentDescription="The cover of the image in description section"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Titulo 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/detail_movie_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_movie_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="28/04/1998"
        app:layout_constraintEnd_toEndOf="@id/detail_movie_title"
        app:layout_constraintStart_toStartOf="@+id/detail_movie_title"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_title" />

    <RatingBar
        android:id="@+id/detail_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:isIndicator="true"
        android:max="10"
        app:layout_constraintEnd_toEndOf="@id/detail_movie_release"
        app:layout_constraintStart_toStartOf="@+id/detail_movie_release"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_release" />

    <TextView
        android:id="@+id/detail_movie_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="Conta a historia de blablabla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_cover" />
</androidx.constraintlayout.widget.ConstraintLayout>